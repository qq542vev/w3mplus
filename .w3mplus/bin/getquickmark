#!/usr/bin/env sh

### Script: getquickmark
##
## 条件に一致するクイックマークを取得する。
##
## Metadata:
##
##   author - <qq542vev at https://purl.org/meta/me/>
##   version - 2.2.1
##   date - 2022-07-13
##   since - 2019-07-29
##   copyright - Copyright (C) 2019-2022 qq542vev. Some rights reserved.
##   license - <CC-BY at https://creativecommons.org/licenses/by/4.0/>
##   package - w3mplus
##
## See Also:
##
##   * <Project homepage at https://github.com/qq542vev/w3mplus>
##   * <Bag report at https://github.com/qq542vev/w3mplus/issues>

VERSION='getquickmark 2.2.1'

. 'init.sh'
. 'sysexits.sh'
. 'usage.sh'
. 'awkv_escape.sh'

# @getoptions
parser_definition() {
	setup REST abbr:true error:error plus:true no:0 help:usage \
		-- 'Usage:' "  ${2##*/} [OPTION]... [PATTERN]..." \
		'' 'Options:'

	param config     -c --config  init:'config="${HOME}/.w3mplus/quickmark"' var:FILE -- '設定ファイルを指定する'
	flag  regexpFlag -E --{no-}extended-regexp init:@no -- '拡張正規表現を使用する'
	disp  :usage     -h --help    -- 'このヘルプを表示して終了する'
	disp  VERSION    -v --version -- 'バージョン情報を表示して終了する'

	msg -- '' 'Exit Status:' \
		'    0 - successful termination' \
		'    1 - empty result' \
		'   64 - command line usage error' \
		'   65 - data format error' \
		'   66 - cannot open input' \
		'   67 - addressee unknown' \
		'   68 - host name unknown' \
		'   69 - service unavailable' \
		'   70 - internal software error' \
		"   71 - system error (e.g., can't fork)" \
		'   72 - critical OS file missing' \
		"   73 - can't create (user) output file" \
		'   74 - input/output error' \
		'   75 - temp failure; user is invited to retry' \
		'   76 - remote error in protocol' \
		'   77 - permission denied' \
		'   78 - configuration error' \
		'  129 - received SIGHUP' \
		'  130 - received SIGINT' \
		'  131 - received SIGQUIT' \
		'  143 - received SIGTERM'
}
# @end

# @gengetoptions parser -i parser_definition parse "${1}"
# @end

eval "$(getoptions parser_definition parse "${0}")"
parse ${@+"${@}"}
eval "set -- ${REST}"

if [ '!' -e "${config}" ]; then
	configDir=$(dirname -- "${config}"; printf '_')
	mkdir -p -- "${configDir%?_}"

	: >"${config}"
fi

if [ '!' -f "${config}" ]; then
	cat <<-EOF >&2
		${0##*/}: '${config}' は通常ファイルではありません。
		詳細については '${0##*/} --help' を実行してください。
	EOF

	endCall "${EX_DATAERR}"
elif [ '!' -r "${config}" ]; then
	cat <<-EOF >&2
		${0##*/}: '${config}' の読み込み許可がありません。
		詳細については '${0##*/} --help' を実行してください。
	EOF

	endCall "${EX_NOINPUT}"
fi

case "${#}" in
	'0')
		cat -- "${config}"
		exit
		;;
esac

awkScript=$(
	cat <<-'EOF'
	@include "backslash_unescape.awk"

	BEGIN {
		FS = "\t"
		exitStatus = 1

		for(i = 1; i < ARGC; i++) {
			pattern = ARGV[i]

			while(0 < (getline < config)) {
				key = backslash_unescape($1)

				if((regexpFlag && key ~ pattern) || (!regexpFlag && key == pattern)) {
					printf("%s\n", $0)
					exitStatus = 0
				}
			}

			close(config)
		}

		exit exitStatus
	}
	EOF
)

awkv_escape 'config' "${config}"

awk \
	-v "config=${config}" \
	-v "regexpFlag=${regexpFlag}" \
	-- "${awkScript}" ${@+"${@}"} \
|| endCall "${?}"
